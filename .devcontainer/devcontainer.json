{
  "name": "AI‑Codegen Dev",
  "dockerComposeFile": "../docker-compose.yml",   // sökväg till compose‑filen
  "service": "devcontainer",                      // tjänsten som VS Code ska köra i
  "workspaceFolder": "/workspaces/ai-codegen-extension",

  // körs en gång efter att containern byggts
  "postCreateCommand": "npm install",

  // valfria VS Code‑inställningar/tillägg för containermiljön
  "customizations": {
    "vscode": {
      "extensions": [
        "dbaeumer.vscode-eslint",
        "esbenp.prettier-vscode"
      ]
    }
  }
}
