{ 
  "compilerOptions": {
    /* ------- Modulupplösning & alias ------- */
    "rootDir": ".",                  // projektrot
    "baseUrl": ".",                  // möjliggör "@/…"-alias
    "paths": {
      "@/*": ["src/*"]
    },

    /* ------- Target / ECMAScript-nivå ------- */
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",   // matchar Vite 5

    /* ------- JSX / DOM ------- */
    "jsx": "react-jsx",
    "lib": ["ES2022", "DOM"],

    /* ------- Typmiljö ------- */
    "types": ["node", "vscode", "vite/client"],

    /* ------- Kvalitet & DX ------- */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },

  /* Filer som ingår i kompileringen */
  "include": ["src/**/*", "webview/**/*", "global.d.ts"]
}
