{
  "compilerOptions": {
    /* ------- Projektstruktur ------- */
    "rootDir": "src",
    "outDir": "dist",
    "baseUrl": ".",
    "paths": { "@/*": ["src/*"] },

    /* ------- Target / Modul ------- */
    "target": "ES2018",
    "module": "commonjs",
    "moduleResolution": "node",

    /* ------- JSX / DOM ------- */
    "jsx": "react-jsx",
    "lib": ["ES2018", "DOM"],

    /* ------- Typ-milj√∂ ------- */
    "types": ["node", "vscode", "vite/client"],

    /* ------- Kvalitet & DX ------- */
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "resolveJsonModule": true
  },

  "include": ["src/**/*", "src/webview/**/*", "global.d.ts"]
}
