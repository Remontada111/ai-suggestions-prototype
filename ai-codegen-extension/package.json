{
  "name": "ai-figma-codegen",
  "displayName": "AI Figma Codegen",
  "publisher": "crnolic",
  "version": "0.0.2",
  "description": "Förhandsvisa och importera Figma-komponenter direkt i VS Code.",
  "engines": {
    "vscode": "^1.102.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onUri"
  ],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "ai-figma-codegen.openPanel",
        "title": "AI Figma Codegen: Open Panel"
      },
      {
        "command": "ai-figma-codegen.scanAndPreview",
        "title": "AI Figma Codegen: Scan & Preview"
      }
    ],
    "configuration": {
      "title": "AI Figma Codegen",
      "properties": {
        "aiFigmaCodegen.figmaToken": {
          "type": "string",
          "default": "",
          "markdownDescription": "Din Figma Personal Access Token (Account → Settings → Developer tokens)."
        }
      }
    }
  },
  "scripts": {
    "compile": "tsc -p .",
    "watch": "tsc -p . -w",
    "dev:webview": "vite build --watch --config vite.webview.config.ts",
    "build:webview": "vite build --config vite.webview.config.ts",
    "dev": "npm-run-all --parallel watch dev:webview",
    "prepackage": "npm run compile && npm run build:webview",
    "package": "vsce package --no-dependencies",
    "tw": "tailwindcss",
    "tw:dev": "tailwindcss -i ./src/index.css -o ./dist/style.css --watch"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.11",
    "@types/node": "^24.0.14",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@types/vscode": "^1.102.0",
    "@vitejs/plugin-react": "^4.6.0",
    "@vscode/vsce": "^3.6.0",
    "autoprefixer": "^10.4.21",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.11",
    "typescript": "^5.5.0",
    "vite": "^5.2.0"
  },
  "dependencies": {
    "@tanstack/react-query": "^5.83.0",
    "clsx": "^2.1.1",
    "dotenv": "^17.2.0",
    "node-fetch": "^3.3.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "strip-ansi": "^7.1.0",
    "unidiff": "^1.0.4",
    "yaml": "^2.8.1",
    "zustand": "^5.0.6"
  }
}
